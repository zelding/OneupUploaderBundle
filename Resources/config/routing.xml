<?xml version="1.0" encoding="utf-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="oneup_uploader.routing.loader.class">Oneup\UploaderBundle\Routing\RouteLoader</parameter>
    </parameters>
    
    <services>
        <service id="oneup_uploader.routing.loader" class="%oneup_uploader.routing.loader.class%" public="false">
            <argument>%oneup_uploader.config%</argument>
            <argument type="service" id="oneup_uploader.controller_registry" />
            <tag name="routing.loader" />
        </service>
    </services>

</container>